{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "include": [
    "./src/**/*"
  ]
}
