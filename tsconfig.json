{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "pretty": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
